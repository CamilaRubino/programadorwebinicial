<!--INICIA NOVEDADES / TESTIMONIOS-->
<div class="row my-3"> <!--INICIA NOVEDADES-->
    <div id="novedades" class="col-md-5 offset-md-2 scroll_selection">
      <h1>Novedades</h1>      
      <ul class="lista-novedades">
        {{#each novedades}}
        <li>
          <a href="javascript:void(0);" data-bs-toggle="modal" data-bs-target="#Modal{{id}}">
            <img src="{{imagen}}" style="width:150px; height:100px"> {{titulo}} </a>
        </li>
        {{/each}}
      </ul>
    </div>
    <!-- inicio Modal -->
    {{#each novedades}}
    <div class="modal fade" id="Modal{{id}}" tabindex="-1" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h2 class="modal-title" id="exampleModalLabel">{{titulo}}</h2>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <h5>{{subtitulo}}</h5>
            <img src="{{imagen}}" style="width:150px; height:100px" />
            <p>{{cuerpo}}</p>
          </div>
        </div>
      </div>
    </div> <!--CIERRA NOVEDADES-->
    {{/each}}
  <!-- cierro Modal -->
